@page
@model AboutModel
@{
    ViewData["Title"] = "Om Os";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Om Os – Pis Maxi Gennem Tiden</h1>

    @foreach (var item in Model.History)
    {
        <div class="d-flex align-items-center mb-4 pb-4 border-bottom">
            <div class="flex-shrink-0">
                <img src="@item.ImagePath" alt="@item.Title" class="history-image">
            </div>
            <div class="ms-4">
                <h2 class="h4">@item.Year: @item.Title</h2>
                <p>@item.Description</p>
            </div>
        </div>
    }
</div>

<style>
    .history-image {
        width: 150px; /* Ens størrelse */
        height: 150px;
        object-fit: contain; /* Hele billedet vises inden for rammen */
        border-radius: 8px;
        background-color: white; /* Hvis billedet har gennemsigtige dele */
        padding: 5px; /* Lidt ekstra plads indenfor rammen */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>